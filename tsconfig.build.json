    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
